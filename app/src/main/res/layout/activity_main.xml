<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:saveEnabled="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".MainActivity"
    tools:ignore="TouchTargetSizeCheck, HardcodedText, AutoFill, TextFields, UseSwitchCompatOrMaterialXml">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chpUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Account Token"
            android:maxLines="1"
            android:minHeight="48dp"
            android:text="&lt;--Harry#4627--&gt;"
            app:chipIcon="@drawable/ic_discord"
            app:closeIcon="@android:drawable/stat_notify_sync"
            app:closeIconSize="30dp"
            app:closeIconVisible="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chpName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Activity Name"
            android:maxLines="1"
            android:minHeight="48dp"
            android:text="𝐓𝐚𝐜𝐡𝐢𝐲𝐨𝐦𝐢𝐒𝐘"
            app:chipIcon="@drawable/ic_tachiyomi"
            app:closeIcon="@android:drawable/stat_notify_sync"
            app:closeIconSize="30dp"
            app:closeIconVisible="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chpUsername" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chpState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Activity State"
            android:maxLines="1"
            android:minHeight="48dp"
            android:text="𝔐𝔞𝔫𝔤𝔞"
            app:chipIcon="@drawable/ic_reading"
            app:closeIcon="@android:drawable/stat_notify_sync"
            app:closeIconSize="30dp"
            app:closeIconVisible="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chpName"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <EditText
            android:id="@+id/edtDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@android:drawable/ic_menu_send"
            android:hint="Activity Details"
            android:maxLines="1"
            android:minHeight="48dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chpState"
            tools:ignore="TextContrastCheck" />

        <Switch
            android:id="@+id/swtRPC"
            style="@style/Widget.AppCompat.CompoundButton.Switch"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded_corner"
            android:paddingHorizontal="25dp"
            android:saveEnabled="true"
            android:stateListAnimator="@anim/bounce"
            android:switchMinWidth="60dp"
            android:text="RPC STATE"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtDetails" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFooter"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginTop="308dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="Currently in Testing stage --By Jery"
            android:textAlignment="center"
            android:textStyle="italic"
            android:typeface="serif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/swtRPC" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/swtRPC" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>